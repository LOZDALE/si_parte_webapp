# Abilita PATH_INFO per il routing API
AcceptPathInfo On

# Abilita mod_rewrite se disponibile (opzionale, per routing pi√π pulito)
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /Si_Parte/Public/
    
    # Reindirizza richieste a api.php/qualcosa a api.php?route=qualcosa se PATH_INFO non funziona
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^api\.php/(.*)$ api.php?route=$1 [QSA,L]
</IfModule>

# Abilita CORS se necessario
<IfModule mod_headers.c>
    Header set Access-Control-Allow-Origin "*"
    Header set Access-Control-Allow-Methods "GET, POST, OPTIONS"
    Header set Access-Control-Allow-Headers "Content-Type"
</IfModule>

